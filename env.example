# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/totem
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=totem

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# API Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000

# OpenTelemetry Configuration
OTLP_ENDPOINT=http://localhost:4317
SERVICE_NAME=totem-api
OTLP_HEADERS=""

# Printer Configuration
PRINTER_TYPE=mock
PRINTER_VENDOR_ID=0x0483
PRINTER_PRODUCT_ID=0x5740
PRINTER_HOST=192.168.1.100
PRINTER_PORT=9100
PRINTER_SERIAL_PORT=/dev/ttyUSB0
PRINTER_BAUDRATE=9600

# Terminal Configuration
TERMINAL_TYPE=mock
TERMINAL_CONNECTION=serial
TERMINAL_PORT=COM1
TERMINAL_BAUDRATE=9600
TERMINAL_TIMEOUT=30
TERMINAL_SIMULATE_DELAYS=true
TERMINAL_FAILURE_RATE=0.1

# Stone Terminal (if using)
STONE_MERCHANT_ID=123456789
STONE_TERMINAL_ID=TERM001

# Sicredi Terminal (if using)
SICREDI_MERCHANT_ID=123456789012345
SICREDI_TERMINAL_ID=RECOVERY1
SICREDI_POS_ID=001

# Frontend URLs
VITE_API_URL=http://localhost:8000

# Monitoring Alerts
SMTP_PASSWORD=your-smtp-password
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK 